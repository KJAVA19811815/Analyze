<h1>Login</h1>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">

<%= form_tag '/login' do %>

<div class="form-group">
  Email: <%= text_field_tag :email %>

</div>
<div class="form-group">
  Password: <%= password_field_tag :password %>

</div>
<%= submit_tag "Submit" %>
<% end %>
