<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MEN STUFF</title>
      <%= javascript_include_tag('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js') %>
  </head>
  <body>
    <script>
    $(document).ready(function() {
      var ctx3 = $("#myChart3");
      //console.log(ctx2)
      var myChart = new Chart(ctx3, {
        //console.log(myChart);
          type: 'bar',
          data: {
              labels: <%= @choices.keys.to_json.html_safe %>,
              datasets: [{
                  label: 'do u like apple',
                  data:  <%= @choices.values.to_json.html_safe %>,
                  backgroundColor: [
                      'rgba(255, 99, 132, 0.2)',
                      'rgba(54, 162, 235, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)'
                  ],
                  borderColor: [
                      'rgba(255,99,132,1)',
                      'rgba(54, 162, 235, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)'
                  ],
                  borderWidth: 1
              }]
          },
          options: {
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero:true
                      }
                  }]
              }
          }
    })
  })

    </script>
    <div id="container">
      <canvas id="myChart3">
      </canvas>
    </div>
    <div id = "container2">
    </div>






  </body>
</html>
