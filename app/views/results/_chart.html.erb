<% @all.each do |question, results| %>

<script>
$(document).ready(function() {
  var ctx3 = $(".myChart3");

  // $("#container").append($("ctx3"))

  var myChart = new Chart(ctx3, {
      type: 'bar',
      data: {
          labels: <%= results.keys.to_json.html_safe %>,
          datasets: [{
              label: "<%= question %>",
              data:   <%= results.values.to_json.html_safe %>,
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)'
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
})
})

</script>
<% end %>
